@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color:#ffff"><i class="bi bi-person-square" style="color: #ffbe33"></i></a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
            
            <button type="submit" class="nav-link btn btn-link text-light" style="color:#ffff;"><i class="bi bi-box-arrow-right"></i></button>
        </form>
    </li>
}
else
{
    
    <li class="nav-item" style="margin-left: 206px">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" style="color:#ffff;"><i class="bi bi-person-workspace"></i>&nbsp;&nbsp;Login</a>
    </li>
}
