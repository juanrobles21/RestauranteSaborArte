@model IEnumerable<Product>

@{
    ViewData["Title"] = "Antipasto Sabor y Arte";
}
<div class="container px-5 my-5">
    <div class="row gx-5 justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="text-center">
                <h2 class="fw-bolder" style="font-size: 2.5rem;
font-weight: bold;
font-family: 'Dancing Script', cursive;">
                    Our Menu
                </h2>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg" style="margin-bottom:60px" aria-label="Tenth navbar example">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample08" aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation" style="color:#ffbe33">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index" style="color:#ffbe33;" onclick="">ALL</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Antipasto" style="color:#ffff;">ANTIPASTOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="OvenPizza" style="color:#ffff;">OVEN PIZZAS</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false" style="color:#ffff;">PASTA</a>
                        <div class="ee dropdown-menu">
                            <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Spaguetti" style="color:#ffbe33;">SPAGUETTI</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Cannelloni" style="color:#ffbe33;">CANNELLONI</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Ravioli" style="color:#ffbe33;">RAVIOLI</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Lasagnas" style="color:#ffbe33;">LASAGNAS</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Crep" style="color:#ffff;">CREPES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="PiennoBread" style="color:#ffff;">PIENNO BREAD</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Fish" style="color:#ffff;">FISH</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Beverages" style="color:#ffff;">BEVERAGES</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="row gx-5">
        @foreach (var product in Model)
        {
            if (product.ProductType.Name == "Canelones")
            {
                <div class="col-lg-4 mb-5">
                    <div class="card h-100 shadow border-0">
                        <img class="card-img-top" src="@Html.DisplayFor(mi => product.Image)" alt="...">
                        <div class="card-body p-4">

                            <a class="text-decoration-none link-dark stretched-link" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><h5 class="card-title mb-3" style="font-weight: bold;">@Html.DisplayFor(mi=> product.Name)</h5></a>
                            <p class="card-text mb-0">
                                @product.Description
                            </p>
                            <div class="card-body d-flex justify-content-between align-items-center p-0">
                                <h6>$@product.Price</h6>
                                <a class="btn  btn-sm boton-cart"><i class="bi bi-cart-fill" style="color:#ffffff"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }


        }
    </div>
</div>
