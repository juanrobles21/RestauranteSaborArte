@page
@model RegisterModel

@{
    ViewData["Title"] = "REGISTER";
}

<div class="container" style="inline-size: fit-content">
    <div class="card mb-4 mt-4" style="max-width: 900px">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="http://localhost/img/ustaRestaurante/product/register.jfif" class="prueba img-fluid rounded-start" alt="...">

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h1 class="titulologin">@ViewData["Title"]</h1>
                        <h2 class="subtitulologin" style="color: #ffbe33">Use a local account to register.</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="emailhelp form-text" style="margin-left:10px">
                            We'll never share your email with anyone else.
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3 mt-2">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #ffbe33; border: #ffbe33"><span class="decoracionBoton"></span>Register</button>
                        </div>

                        <div class="container w-100 my-2">
                            <div class="row">
                                <div class="col">
                                    <button class="btn btn-outline-primary w-100 my-1">
                                        <div class="row align-items-center">
                                            <div class="col-2 d-none d-md-block">
                                                <img src=~/css/face.png alt="" />
                                            </div>
                                            <div class="col-10 text-center">Facebook</div>
                                        </div>
                                    </button>
                                </div>
                                <div class="col">
                                    <button class="btn btn-outline-danger w-100 my-1">
                                        <div class="row align-items-center">
                                            <div class="col-2 d-none d-md-block">
                                                <img src=~/css/google.png alt="" />
                                            </div>
                                            <div class="col-10 text-center">Google</div>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
