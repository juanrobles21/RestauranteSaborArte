@page
@model LoginModel

@{
    ViewData["Title"] = "LOGIN";
}

<div class="container" style="inline-size: fit-content">
    <div class="card mb-4 mt-4" style="max-width: 900px">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="http://localhost/img/ustaRestaurante/product/restaurante.jpeg" class="prueba img-fluid rounded-start" alt="...">

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <form id="account" method="post">
                        <h1 class="titulologin">@ViewData["Title"]</h1>
                        <h2 class="subtitulologin" style="color: #ffbe33">Use a local account to log in.</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="emailhelp form-text" style="margin-left:10px">
                            We'll never share your email with anyone else.
                        </div>
                        <div class="form-floating mt-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #ffbe33; border: #ffbe33"><span class="decoracionBoton"></span>Log in</button>
                        </div>

                        <div class="container w-100 my-2">
                            <div class="row">
                                <div class="col">
                                    <button class="btn btn-outline-primary w-100 my-1">
                                        <div class="row align-items-center">
                                            <div class="col-2 d-none d-md-block">
                                                <img src=~/css/face.png alt="" />
                                            </div>
                                            <div class="col-10 text-center">Facebook</div>
                                        </div>
                                    </button>
                                </div>
                                <div class="col">
                                    <button class="btn btn-outline-danger w-100 my-1">
                                        <div class="row align-items-center">
                                            <div class="col-2 d-none d-md-block">
                                                <img src=~/css/google.png alt="" />
                                            </div>
                                            <div class="col-10 text-center">Google</div>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div style="margin-left:40px">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                            <p>
                                <a asp-area="Identity" asp-page="/Account/Register">Create account</a>
                            </p>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
